{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "products": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'"
    },
    "shifts": {
      "$shiftId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "activeShifts": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "userStatus": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}
